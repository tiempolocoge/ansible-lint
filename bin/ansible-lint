#!/usr/bin/env python

import ansible.utils as utils
import sys
import optparse

VERSION = "0.0.1"

def main(args):

    parser = optparse.OptionParser("%prog playbook.yml", 
                                   version="%prog " + VERSION)

    parser.add_option('-c', '--configfile', dest="configfile")
    parser.add_option('-r', '--rulesdir', dest="rulesdir")
    parser.add_option('-i', '--inventory', dest="inventory")
    parser.add_option('-t', '--tags', dest='tags', default='all',
                      help="only check rules tagged with these values")
    parser.add_option('-x', '--skip-tags', dest='skip_tags',
                      help="only check rules whose tags do not match these values")
    options, args = parser.parse_args(args)

    if len(args) == 0:
        parser.print_help(file=sys.stderr)
        return 1

if __name__ == "__main__":
    sys.exit(main(sys.argv[1:]))
